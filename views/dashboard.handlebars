<div class="row m-4">
    <div class="col-10">
        <div class="card border-3 border-dark">
            <div class="card-header bg-dark">
                <h5>Create New Post</h5>
            </div>
            <div class="card-body bg-secondary">
                <form id="new-post-form">
                    <div class="form-group my-1">
                        <label for="post-title">Title</label>
                        <input type="text" class="form-control" id="post-title" name="post-title" />
                    </div>
                    <div class="form-group my-1">
                        <label for="post-contents">Post</label>
                        <textarea class="form-control" id="post-contents" name="post-contents" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-info my-1 w-100">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{#if posts.length}}
<div>
    {{#each posts as |post|}}
    {{> post-info post }}
    <div class="row mx-4 edit-delete-buttons">
        <div class="col-10 d-flex align-items-center">
            <a href="/dashboard/edit/{{post.id}}" class="nav-option">Edit</a>
            <button id="delete-post-btn" class="btn text-info">Delete</button>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

<script src="/javascript/delete-post.js"></script>
<script src="/javascript/add-post.js"></script>