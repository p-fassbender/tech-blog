<section>
    <h2>Create New Post</h2>

    <form id="new-post-form">
        <div class="form-group">
            <label for="post-title">Title</label>
            <input type="text" class="form-control" id="post-title" name="post-title" />
        </div>
        <div class="form-group">
            <label for="post-contents">Post</label>
            <textarea class="form-control" id="post-contents" name="post-contents" rows="3"></textarea>
        </div>
        <button type="submit">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>