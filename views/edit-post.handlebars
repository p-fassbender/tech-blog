<div class="row m-4">
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <div class="col-10">
        <div class="card border-3 border-dark">
            <div class="card-header bg-dark">
                <h5>Edit Post</h5>
            </div>
            <div class="card-body bg-secondary">
                <form id="edit-post-form">
                    <div class="form-group my-1">
                        <label for="post-title">Title</label>
                        <input name="post-title" type="text" class="form-control" value="{{post.title}}" />
                    </div>
                    <div class="form-group my-1">
                        <label for="post-contents">Post</label>
                        <textarea class="form-control" id="post-contents" name="post-contents" rows="3">{{post.post_contents}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-info my-1 w-100">Update</button>
                    <button class="btn btn-danger my-1 w-100 delete-post-btn">Delete</button>

                </form>
            </div>
        </div>
    </div>
</div>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
