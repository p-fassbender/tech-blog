<div class="row m-4">
    <div class="col-10">
        <div class="card border-3 border-dark">
            <div class="card-header bg-dark">
                <h5>Sign Up</h5>
            </div>
            <div class="card-body bg-secondary">
                <form id="signup-form">
                    <div class="form-group my-1">
                        <label for="username-signup">Username:</label>
                        <input type="text" id="username-signup" class="form-control" />
                    </div>
                    <div class="form-group my-1">
                        <label for="password-signup">Password:</label>
                        <input type="password" id="password-signup" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-outline-info my-1 w-100">Sign Up</button>
                </form>
                <a href="/login">Already have an account? Login here</a>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/sign-up.js"></script>